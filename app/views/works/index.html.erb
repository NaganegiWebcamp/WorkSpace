<h1>Works#index</h1>
<p>Find me in app/views/works/index.html.erb</p>

<!-- ジャンル一覧選択 -->
<% @work_genres.each do |wg| %>
<%= link_to work_genre_path(wg) do %><%= wg.name %><% end %><br>
<% end %>
--開催中のコンテスト--
<% @open_contests.each do |oc| %>
<%= link_to contest_path(oc) do %><%= oc.name %><% end %><br>
<% end %>

--終了したコンテスト--
<% @hide_contests.each do |hc| %>
<%= link_to contest_path(hc) do %><%= hc.name %><% end %><br>
<% end %>


<!-- ボタンで隠す -->
<% if user_signed_in? %>
<%= form_for(@work) do |f| %>
    <%= f.label :image %>
    <%= f.file_field :image, id: :work_image %><br>
    <%= f.hidden_field :image_cache %>
    <%= f.label :タイトル %>
	<%= f.text_field :title %><br>
	<%= f.label :説明 %>
	<%= f.text_area :explanation %><br>
	<%= f.label :ジャンル %>
	<%= collection_select(:work,:work_genre_id, @work_genres, :id ,:name) %>
	<%= f.submit "投稿する" %>
<% end %>
-----<br>
<%= form_for(@contest_work, :url => {:controller => :contest_works , :action => :create}) do |f| %>
	<%= f.file_field :image_id %><br>
	<%= f.text_field :title %><br>
	<%= f.text_area :explanation %><br>
	<%= collection_select(:contest_work,:contest_id, @contests, :id ,:name) %>
	<%= f.submit "投稿する" %>
<% end %>
<% end %>

<%= h(flash[:sor]) %>
--work-<br>
<% @works.each do |work| %>
<%= work.title %>
<%= work.explanation %>
<%= image_tag work.image.url %>
<%= link_to work_path(work) do %>詳細<% end %><br>
<% end %><br>
--contest-work-<br>
<% @contest_works.each do |c_work| %>
<%= c_work.title %>
<%= c_work.explanation %>
<%= link_to contest_work_path(c_work) do %>詳細<% end %><br>
<% end %>