
<table class="table table-bordered table-dark table-striped" style="width: 90%; margin:0 auto; table-layout:fixed; text-align: center;">
  <thead>
    <tr>
      <th colspan="3">以下の作品が通報されました。</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">作品画像</th>
      <td colspan="2"><%= image_tag '3.jpg' ,size:"300" ,style:"object-fit: cover;" %></td>
    </tr>
    <tr>
      <th scope="row">作品名/Link</th>
      <td colspan="2"><%= link_to admins_work_path(@report.work.id) do %><span style="font-weight: 600; color:#fafafa;"><%= @report.work.title %></span><% end %></td>
    </tr>
    <tr>
      <th scope="row">作品説明</th>
      <td colspan="2" style="word-wrap:break-word;"><%= @report.work.explanation %></td>
    </tr>
  </tbody>
</table>


<table class="table table-bordered" style="width: 90%; table-layout:fixed; text-align: center; margin:20px auto;">
  <thead class="thead-light">
    <tr>
      <th colspan="2">通報内容詳細</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>通報者</th>
      <td><%= link_to admins_user_path(@report.user.id) do%><%= @report.user.name %><% end %></td>
    </tr>
    <tr>
      <th>通報日時</th>
      <td><%= @report.created_at.strftime('%Y/%m/%d %H:%M') %></td>
    </tr>
    <tr>
      <th>通報内容</th>
      <td style="overflow: auto;"><%= @report.reason %></td>
    </tr>
     <tr>
      <td><%= link_to :back do %><span class="btn btn-success" style="width:200px; "><i class="fas fa-undo-alt"></i>元のページへ戻る</span><% end %></td>
      <td><%= link_to admins_report_work_path(@report) ,method: :delete, data: {confirm: "本当に削除しますか？"} do %><span class="btn mt-2" style="background-color:#6a6a6a; color:#fafafa;">削除する</span><% end %></td>
    </tr>
  </tbody>
</table>

