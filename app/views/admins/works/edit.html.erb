
<div style=" color: #555;">

<h2 style="text-align: center; margin-bottom: 20px;">作品編集</h2>

<%= form_for(@work, url: admins_work_path(@work), method: :patch) do |f| %>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th col="3">入力フォーム</th>
    </tr>
  </thead>
  <tbody>
  	<tr>
      <th scope="row">作品画像</th>
      <td col="3"><%= image_tag '3.jpg', alt:'Test Image' ,size:'350x250'%></td>
    </tr>
   <tr>
      <th scope="row">作品タイトル</th>
      <td col="3"><%= f.text_field :title , size: "60x1" %></td>
    </tr>
    <tr>
      <th scope="row">作品説明</th>
      <td col="3"><%= f.text_area :explanation, size: "60x10" %></td>
    </tr>
    <tr>
      <th scope="row">ジャンル設定</th>
      <td col="3"><%= collection_select(:work,:work_genre_id, @work_genres, :id ,:name) %></td>
    </tr>
    <tr>
      <th scope="row">公開範囲</th>
      <td col="3"><%= select :work, :hide_flg, {"全体公開" => false, "非公開" => true} %></td>
    </tr>
    <tr>
      <th scope="row">確認</th>
      <td col="3"><%= f.submit "更新する" , class:"btn btn-info"%></td>
    </tr>
  </tbody>
  <% end %>
</table>

</div>