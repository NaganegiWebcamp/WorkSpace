<div class="signup-box">



<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<table class="table table-bordered" style="width:50%; margin:0 auto;">
  <thead>
    <tr>
      <th colspan="2"><h2>Log in</h2></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="col">メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th scope="col">パスワード</th>
      <td><%= f.password_field :password, autocomplete: "off" %></td>
    </tr>
    <tr>
      <td colspan="2"><% if devise_mapping.rememberable? -%><%= f.check_box :remember_me %>
      <%= f.label :remember_me %><% end %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.submit "ログイン",class: "btn btn-info" %></td>
    </tr>
  </tbody>
</table>

<% end %>


</div>

