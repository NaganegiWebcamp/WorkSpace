<div class="signup-box">



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<table class="table table-bordered" style="width: 50%; margin:0 auto;">
  <thead>
    <tr>
      <th colspan="2"><h2>Sign up</h2></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="col">ユーザー名</th>
      <td><%= f.text_field :name, autofocus: true, autocomplete: "User Name" %></td>
    </tr>
    <tr>
      <th scope="col">メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th scope="col">パスワード<% if @minimum_password_length %>
    <em>(最小<%= @minimum_password_length %>文字)</em>
    <% end %></th>
      <td><%= f.password_field :password, autocomplete: "off" %></td>
    </tr>
    <tr>
      <th scope="col">パスワード確認</th>
      <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
    </tr>
    <tr>
      <td colspan="2"><%= f.submit "新規登録",class: "btn btn-info" %></td>
    </tr>
  </tbody>
</table>

<% end %>


</div>